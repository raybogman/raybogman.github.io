{ "@context": "http://schema.org",
 "@type": "BlogPosting",
  "mainEntityOfPage": {
         "@type": "WebPage",
         "@id": "{{ page.url | replace:'index.html','' | prepend: site.url }}"
      },
 "headline": "{% if page.title %}{{ page.title | escape }}{% else %}{{ site.title | escape }}{% endif %}",
 "image": "{{site.url}}/{{site.data.author["author"]["assets"]}}",
 "editor": "{{site.data.author["author"]["name"]}}",
 "publisher": {
   "@type": "Organization",
   "name": "{{ site.title }}",
   "logo": {
     "@type": "ImageObject",
     "url": "{{site.url}}/{{site.logo}}",
     "width": "60",
     "height": "60"
   }
 },
 "url": "{{ site.baseurl }}{{ post.url | remove: '/'}}",
 "datePublished": "{{ post.date | date:'%Y-%m-%d' }}",
 "dateModified": "{{ post.date | date:'%Y-%m-%d' }}",
 "description": "{% if page.excerpt %}{{ page.excerpt | strip_html | strip_newlines | truncate: 160 }}{% else %}{{ site.description }}{% endif %}",
   "author": {
    "@type": "Person",
    "name": "{{site.data.author["author"]["name"]}}"
  }
 }
